{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2022",
		"jsx": "react",
		"allowImportingTsExtensions": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*", "dist", "build"]
}
